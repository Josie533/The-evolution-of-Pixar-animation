<script>
  // Toggle event details on clicking dot or heading
  const events = document.querySelectorAll('.event');

  events.forEach(event => {
    const dot = event.querySelector('.event-dot');
    const heading = event.querySelector('h2');
    const content = event.querySelector('.event-content');

    function toggleContent() {
      const isOpen = content.classList.toggle('open');
      dot.setAttribute('aria-expanded', isOpen);
      heading.setAttribute('aria-expanded', isOpen);
      content.setAttribute('aria-hidden', !isOpen);
      if(isOpen){
        content.scrollIntoView({behavior: 'smooth', block: 'start'});
        playClickSound();
      }
    }

    dot.addEventListener('click', toggleContent);
    dot.addEventListener('keypress', e => {
      if(e.key === 'Enter' || e.key === ' ') toggleContent();
    });
    heading.addEventListener('click', toggleContent);
    heading.addEventListener('keypress', e => {
      if(e.key === 'Enter' || e.key === ' ') toggleContent();
    });
  });

  // Background Music (looped)
  const bgMusic = new Audio('https://cdn.pixabay.com/download/audio/2021/09/26/audio_7d37609b06.mp3?filename=calm-piano-10863.mp3');
  bgMusic.loop = true;
  bgMusic.volume = 0.15;
  bgMusic.play().catch(() => {
    // Autoplay might be blocked, add a play button later if needed
  });

  // Click sound effect
  const clickSound = new Audio('https://freesound.org/data/previews/256/256113_3263906-lq.mp3');
  function playClickSound(){
    clickSound.currentTime = 0;
    clickSound.play();
  }
</script>

